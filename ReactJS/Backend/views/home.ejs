<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Bootstrap -->
    <%- include('partials/bootstrapCDN.ejs') %>

        <title>AnimeME</title>
</head>

<body>

    <%- include('partials/navbar.ejs') %>
<br>
<h1>Anime</h1>

        <div class="table-responsive">
            <table class="table align-middle">
                <thead>
                    <tr>
                        <th>Anime</th>

                        <th> Ann√©e de diffusion</th>

                        <th>Genre</th>

                        <th>Description</th>
                        
                        <th>Editer</th>

                        <th>Supprimer</th>
                    </tr>
                </thead>
                
                    <tbody>
                        <%data.forEach((anime)=>{ %>
                        <tr>
                            <td><%= anime.anime %></td>
                            <td><%= anime.diffusion %></td>
                            <td><%= anime.genre %></td>
                            <td><%= anime.description %></td>

                            <td>
                                <form action="/anime/<%= anime.id%>">
                                    <input type="submit" value="Editer">
                                </form>
                            </td>

                            <td>
                                <form action="/anime/delete/<%= anime.id%>?_method=DELETE" method="post">
                                <input type="hidden" name="_method" value="DELETE">
                                <input type="submit" value="Supprimer">
                                </form>
                            </td>
                        </tr>
                        <% }) %>
                    </tbody>
            </table>
        </div>









</body>

</html>